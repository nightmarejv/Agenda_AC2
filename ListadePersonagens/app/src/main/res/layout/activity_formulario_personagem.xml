<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activities.FormularioPersonagemActivity">

    <Button
        android:id="@+id/button_salvar"
        android:layout_width="338dp"
        android:layout_height="48dp"
        android:layout_marginTop="99dp"
        android:text="Salvar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edittext_nascimento"
        app:layout_constraintVertical_bias="0.148" />

    <EditText
        android:id="@+id/eddittext_nome"
        android:layout_width="337dp"
        android:layout_height="41dp"
        android:layout_marginTop="36dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Nome"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="16dp" />

    <EditText
        android:id="@+id/edittext_altura"
        android:layout_width="337dp"
        android:layout_height="43dp"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Altura"
        app:layout_constraintTop_toBottomOf="@+id/eddittext_nome"
        tools:layout_editor_absoluteX="16dp" />

    <EditText
        android:id="@+id/edittext_nascimento"
        android:layout_width="337dp"
        android:layout_height="37dp"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Nascimento"
        app:layout_constraintTop_toBottomOf="@+id/edittext_altura"
        tools:layout_editor_absoluteX="16dp" />
</androidx.constraintlayout.widget.ConstraintLayout>